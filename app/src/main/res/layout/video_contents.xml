<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <VideoView
            android:id="@+id/video_contents_vv_video"
            android:layout_width="wrap_content"
            android:layout_height="78dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/play_inside_content_icon"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/video_contents_iv_video_cancel"
            android:background="@drawable/content_x_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_contents_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:text="lalalalallalal"/>

        <Button
            android:background="@drawable/add_to_library_normal_icon"
            android:id="@+id/video_contents_bt_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="right"/>
        <Button
            android:id="@+id/video_contents_bt_feedback"
            android:background="@drawable/feedback_normal_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="right"/>
        <TextView
            android:id="@+id/video_contents_tv_hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="allalalallalalalal"/>

        <Button
            android:id="@+id/video_contents_bt_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:text="36"
            android:drawableRight="@drawable/good_normal_btn"
            android:layout_gravity="right"/>
    </GridLayout>
    <TabHost
        android:id="@+id/host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/video_contents_RecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </FrameLayout>

        </LinearLayout>

    </TabHost>

</LinearLayout>